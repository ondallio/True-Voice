{
  "expo": {
    "name": "True Voice",
    "slug": "true-voice",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "scheme": "truevoice",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#f8f9fa"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.truevoice.app",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "발음 교정을 위해 음성을 녹음합니다."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#f8f9fa"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.truevoice.app",
      "permissions": [
        "RECORD_AUDIO"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-router",
      [
        "expo-av",
        {
          "microphonePermission": "발음 교정을 위해 음성을 녹음합니다."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
